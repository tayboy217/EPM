<% if @contact.errors.any? %>
  <%= @contact.errors.count %>件のエラー。
  <% @contact.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="container">
  <div class="row">
    <h3 class="contact-title mt-4">お問い合わせフォーム</h3>
  </div>
  <%= form_with model: Contact, local:true  do |f| %>
    <%= f.label :タイトル %>
    <%= f.text_field :title, class:"form-control" %>
    <%= f.label :内容 %>
    <%= f.text_field :body, class:"form-control" %>
  <div class="mt-2">
    <%= f.submit "送信", class: "btn btn-outline-info" %>
  </div>
  <% end %>
</div>
