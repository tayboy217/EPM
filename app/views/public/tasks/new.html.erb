<div class="container">
 <div class="row">
  <h3 class="mt-4">タスク新規投稿</h3>
 </div>
  <%= form_with model: @task, local:true do |f| %>
    <div>タスク内容</div>
   <%= f.text_field :title %>
   <%= f.datetime_field :starts_at %>
   <%= f.datetime_field :ends_at %>
   <%= f.submit '投稿' %>
  <% end %>
</div>
<div class="container">
  <h4 class="mt-4">ToDoList</h4>
  <div class="row">
    <% @tasks.each do |task| %>
      <div class="col-md-4 mb-3">
        <div class="card task-card">
          <div class="card-body">
            <h4 class="card-subtitle text-muted"><%= task.title %></h4>
            <p class="card-title mb-2"><%= task.starts_at %></p>
            <p class="card-text"><%= task.ends_at %></p>
            <div>
              <%= link_to "完了", task_path(task), method: :delete, data: { confirm: "タスクは完了しましたか？" }, class: "btn btn-outline-info btn-sm"  %>
            </div>
          </div>
        </div>
      </div>
    <% end %>