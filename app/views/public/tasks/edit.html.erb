<div class="container mt-4">
  <div class="d-flex">
    <h3>タスク編集</h3>
  </div>
<%= render 'layouts/error', model: @task %>
<%= form_with model: @task, local: true do |f| %>
  <div class="field">
  <%= f.label "タスク内容", class: "col-sm-2 control-label mr-2" %>
  <%= f.text_field :title, class: "col-sm-3 control-label" %>
  </div>
  
  <div class="field">
  <%= f.label "開始日", class:  "col-sm-2 control-label mr-2" %>
  <%= f.text_field :starts_at, class: "col-sm-3 control-label" %>
  </div>
  
  <div class="field">
  <%= f.label "終了日", class:  "col-sm-2 control-label mr-2" %>
  <%= f.text_field :ends_at, class: "col-sm-3 control-label" %>
  </div>
  
  <div class="mt-2 ml-3">
  <%= f.submit "更新", class: "btn btn-outline-info" %>
  </div>
<% end %>
</div>