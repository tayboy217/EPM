<h1>EDIT</h1>

<%= form_with model: @user, local: true do |f| %>
<div class="field">
<%= f.label :name, class: "label" %>
<%= f.text_field :name, class: "input" %>
</div>

<div class="field">
<%= f.label :email, class: "label"  %>
<%= f.text_field :email, class: "input" %>
</div>

<%= f.submit "Update", class: "button is-success" %>
<% end %>