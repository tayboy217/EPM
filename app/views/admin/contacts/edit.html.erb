<div class="container mt-4">
 <div class="d-flex">
  <h3>お問い合わせ内容</h3>
 </div>
 
 <div class=" mt-3">
  <%= form_with model: Contact, url: admin_contact_path(@contact),  local:true, method: :patch do |f| %>
   
    <div class="field">
     <strong>
      <%= f.label "ユーザー名", class: "col-sm-3 control-label mr-2" %>
     </strong>
     <nobar class= "col-sm-3">
      <%= @contact.user.name %>さん
     </nobar>
    </div>
    
    <div class="field">
     <strong>
      <%= f.label "受信日", class: "col-sm-3 control-label mr-2 mt-2" %>
     </strong>
     <nobar class= "col-sm-3">
     <%= @contact.created_at.strftime("%Y年%m月%d日 ") %>
     </nobar>
    </div>
    
    <div class="field">
     <strong>
      <%= f.label "お問い合わせタイトル", class: "col-sm-3 control-label mr-2 mt-2" %>
     </strong>
     <nobar class= "col-sm-3">
      <%= @contact.title %>
     </nobar>
    </div>
     
    <div class="field">
     <strong>
      <%= f.label "お問い合わせ内容", class: "col-sm-3 control-label mr-2 mt-2" %>
     </strong>
     <nobar class= "col-sm-3">
      <%= @contact.body %>
     </nobar>
    </div>
       
    <div class="field">
     <strong>
      <%= f.label "返信", class: "col-sm-3 control-label mr-2 mt-2" %>
     </strong>
      <%= f.text_area :reply, size: "5x5", class:"form-control ml-3", placeholder: "返信内容" %>
      <%= f.submit "送信" , class: "btn btn-outline-info ml-3 mt-2"%>
    </div>
     <% end %>
     
  </div>
 </div>